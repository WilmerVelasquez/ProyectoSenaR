@model EditarRol

@{ 
    ViewBag.Title = "Editar Rol";
}
   
<h1>Editar Rol</h1>
<form class="mt-3" method="post">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div> 
    <div  class="form-group row">
        <label asp-for="NombreRol" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NombreRol" class="form-control" />
            <asp asp-validation-for="NombreRol" class="text-danger"></asp>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Editar</button>
            <a asp-action="ListaRoles" class="btn btn-primary" style="width:auto">Cancelar</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Usuarios en este rol</h3>
        </div>
        <div class="card-body">
            @if (Model.Usuario.Any())
            {
                foreach (var user in Model.Usuario)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Ninguno por ahora</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary" style="width:auto">Nuevo usuario</a>
            <a href="#" class="btn btn-primary" style="width:auto">Borrar usuario</a>
        </div>
    </div>
</form>
